<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/item_spacing_half"
    android:clickable="true"
    android:foreground="?selectableItemBackground"
    android:orientation="vertical"
    tools:layout_margin="@dimen/item_spacing_half">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_normal">

            <TextView
                android:id="@+id/book_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                tools:text="@string/placeholder_book_title"/>

            <TextView
                android:id="@+id/book_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/book_title"
                android:layout_marginTop="@dimen/spacing_normal"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/body_text_2"
                tools:text="@string/placeholder_book_description"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingEnd="@dimen/spacing_small"
            android:paddingStart="@dimen/spacing_small">

            <Button
                android:id="@+id/button_read"
                style="?attr/buttonBarPositiveButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:text="@string/button_read"
                android:textColor="@color/primary"
                tools:ignore="RelativeOverlap"/>

        </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>
